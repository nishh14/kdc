<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="kdc.Views.Login">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout HorizontalOptions="Center" WidthRequest="400">
                <Label Text="Kensington Dry Cleaners"/>
                <Entry ClassId="txtUsername" Placeholder="Your email"/>
                <Entry ClassId="txtPassword" Placeholder="Your password"/>
                <Button Text="Login" x:Name="btnLogin" Clicked="btnLogin_Clicked"/>
                <Label Text="Create account"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>